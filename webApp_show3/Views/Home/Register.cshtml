@model webApp_show3.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">

    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card p-4 shadow" style="width: 100%; max-width: 500px;">
            <h4 class="text-center mb-4">Đăng ký tài khoản</h4>

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="msv" class="form-label">Mã sinh viên</label>
                    <input asp-for="msv" class="form-control" />
                    <span asp-validation-for="msv" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="name" class="form-label">Họ tên</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="birthday" class="form-label">Ngày sinh</label>
                    <input asp-for="birthday" type="date" class="form-control" />
                    <span asp-validation-for="birthday" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Giới tính</label><br />
                    <div class="form-check form-check-inline">
                        <input asp-for="gender" class="form-check-input" type="radio" value="Nam" id="genderNam" />
                        <label class="form-check-label" for="genderNam">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="gender" class="form-check-input" type="radio" value="Nữ" id="genderNu" />
                        <label class="form-check-label" for="genderNu">Nữ</label>
                    </div>
                    <span asp-validation-for="gender" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="hasGraduated" class="form-label">Tình trạng tốt nghiệp</label>
                    <select asp-for="hasGraduated" class="form-select">
                        <option value="" selected disabled>Chọn tình trạng</option>
                        <option value="true">Đã tốt nghiệp</option>
                        <option value="false">Chưa tốt nghiệp</option>
                    </select>
                    <span asp-validation-for="hasGraduated" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>
