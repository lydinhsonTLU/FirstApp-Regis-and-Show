@model List<Student>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang chủ</title>
</head>
<body>
    <div class="row">
        <div class="d-flex justify-content-between">
            <div></div>
            <a asp-action="logout" class="btn btn-secondary">Đăng xuất</a>
        </div>
    </div>
    <div class="text-center"><h3>Danh sách sinh viên đã đăng ký</h3></div>
    <div class="d-flex justify-content-center">
        <table class="table table-striped table-hover">
            <thead>
               <tr>
                    <th>Mã sinh viên</th>
                    <th>Họ tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Tình trạng</th>
               </tr>
            </thead>

            <tbody>
                @foreach (Student i in Model)
                {
                    <tr>
                        <td>@i.msv</td>
                        <td>@i.name</td>
                        <td>@i.gender</td>
                        <td>@i.birthday</td>
                        <td>
                            <input disabled type="radio" name="graduate_@i.msv" value="true" @(i.hasGraduated ? "checked" : "") /> Yes
                            <input disabled type="radio" name="graduate_@i.msv" value="false" @(!i.hasGraduated ? "checked" : "") /> No
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

</body>
</html>
